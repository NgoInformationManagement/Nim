{
    "name": "nim/worker-bundle",
    "type": "symfony-bundle",
    "description": "Nim worker bundle : Manage your data about your employees",
    "keywords": ["nim", "ngo", "humanitarian", "agency"],
    "homepage": "https://github.com/NgoInformationManagement/WorkerBundle",
    "license": "MIT",

    "authors": [
        {
            "name": "aRn0D",
            "homepage": "https://github.com/aRn0D"
        }
    ],

    "minimum-stability": "dev",

    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },

    "target-dir": "NIM/WorkerBundle",

    "require": {
        "php": ">=5.3.3",
        "symfony/framework-bundle": "~2.3",
        "sylius/resource-bundle": "1.0.*@dev",
        "stof/doctrine-extensions-bundle": "~1.1@dev",
        "nim/core-bundle": "0.1.*@dev",
        "nim/form-bundle": "0.1.*@dev"
    },

    "require-dev": {
        "phpspec/phpspec": "2.0.*@dev",
        "symfony/form": "~2.3"
    },

    "config": {
        "bin-dir": "bin"
    },

    "autoload": {
        "psr-0": {
            "NIM\\WorkerBundle": ""
        }
    }
}