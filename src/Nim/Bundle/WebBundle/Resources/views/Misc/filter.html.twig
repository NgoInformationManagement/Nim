<form action="{{ path(path) }}"
      method="GET"
      role="form"
      id="workerCreateForm"
      data-controller="filter"
      class="form-horizontal panel panel-default"
      novalidate>
    <div class="panel-heading filter-header" data-event='{"event":"click", "method":"toggle"}'>
        {{ 'general.filter'|trans }} <i data-filter="icon" class="icon-caret-left"></i>
    </div>
    <div class="panel-body"
         data-toggle="filter"
         {% if not openPanel %}style="display:none"{% endif %}>
        <div class="row">
            {% for child in form %}
                <div class="col-lg-3">
                    {{ form_row(child) }}
                </div>
            {% endfor %}
        </div>
        <div class=" text-right">
            <button class="btn btn-primary">
                <i class="icon-filter"></i>
                {{ 'button.filter'|trans }}
            </button>
        </div>
    </div>
</form>
