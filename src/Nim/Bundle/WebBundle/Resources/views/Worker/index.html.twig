{% extends 'NimWebBundle::layout.html.twig' %}

{% import 'NimThemeBundle:Macro:button.html.twig' as buttons %}
{% from 'NimThemeBundle:Macro:pagination.html.twig' import pagination %}
{% from 'NimWebBundle:Worker:macro.html.twig' import list %}


{% block title %}
    {{ 'layout.page.title'|trans({'%page_title%' : 'mission.title.index'|trans}) }}
{% endblock %}


{% block page_name %}
    <i class="icon-male"></i>
    {{ 'worker.title.index'|trans }}
{% endblock page_name %}


{% block page_action %}
    {{ buttons.new(path('nim_worker_create'), 'worker.button.new') }}
{% endblock page_action %}


{% block content %}
    {% render(controller(
            'nim.controller.form:filterAction',
            {'type': 'nim_filter_worker', 'path': 'nim_worker_index', 'request': app.request})
        )
    %}
    {{ pagination(workers) }}
    {{ list(workers) }}
    {{ pagination(workers) }}
{% endblock %}
