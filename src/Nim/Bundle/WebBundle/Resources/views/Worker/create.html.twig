{% extends 'NimThemeBundle::layout.html.twig' %}

{% import 'NimThemeBundle:Macro:button.html.twig' as buttons %}
{% from 'NimWebBundle:Misc:button.html.twig' import submitFormButton %}


{% block title %}
    {{ 'layout.page.title'|trans({'%page_title%' : 'mission.title.create'|trans}) }}
{% endblock %}


{% block page_name %}
    <i class="icon-malet"></i>
    {{ 'worker.title.create'|trans }}
{% endblock page_name %}


{% block page_action %}
    {{ buttons.back(path('nim_worker_index'), 'button.backToList') }}
    {{ submitFormButton('button.create', 'workerCreateForm') }}
{% endblock page_action %}


{% block content %}
    <form action="{{ path('nim_worker_create') }}"
          method="post"
          role="form"
          id="workerCreateForm"
          novalidate>
        {% include 'NimWebBundle:Worker:_create.html.twig' %}
    </form>
{% endblock %}
