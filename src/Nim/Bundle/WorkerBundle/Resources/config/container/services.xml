<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
        >
    <parameters>
        <parameter key="nim.listener.softdeletable.class">Nim\Bundle\WorkerBundle\EventListener\SoftDeletableListener</parameter>
    </parameters>

    <services>
        <service id="nim.listener.softdeletable" class="%nim.listener.softdeletable.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="kernel.event_listener" event="nim.agency.pre_delete" method="agencyDeletion" />
        </service>
    </services>
</container>
