<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>

    <mapped-superclass name="Nim\Bundle\VaccineBundle\Model\Vaccine" table="nim_vaccine">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="title">
            <gedmo:translatable/>
        </field>

        <field name="description" type="text" nullable="true">
            <gedmo:translatable/>
        </field>

        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>

        <field name="updatedAt" column="updated_at" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>

        <field name="deletedAt" type="datetime" column="deleted_at" nullable="true" />

        <gedmo:soft-deleteable field-name="deletedAt" time-aware="false" />

        <one-to-many field="translations" target-entity="Nim\Bundle\VaccineBundle\Model\VaccineTranslation" mapped-by="object">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <gedmo:translation entity="Nim\Bundle\VaccineBundle\Model\VaccineTranslation" locale="locale"/>
    </mapped-superclass>
</doctrine-mapping>
