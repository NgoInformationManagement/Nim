{% extends 'NIMWebBundle::layout.html.twig' %}

{% import 'NIMFormBundle:Bootstrap3:button.html.twig' as buttons %}
{% from 'NIMWebBundle:Misc:button.html.twig' import submitFormButton %}


{% block title %}
    {{ 'layout.page.title'|trans({'%page_title%' : 'vaccine.title.create'|trans}) }}
{% endblock %}


{% block page_name %}
    <i class="icon-rocket"></i>
    {{ 'vaccine.title.create'|trans }}
{% endblock page_name %}


{% block page_action %}
    {{ buttons.back(path('nim_vaccine_index'), 'button.backToList') }}
    {{ submitFormButton('button.create', 'vaccineCreateForm') }}
{% endblock page_action %}


{% block content %}
    <form action="{{ path('nim_vaccine_create') }}"
          method="post"
          role="form"
          id="vaccineCreateForm"
          class="form-horizontal translated-form"
          novalidate>
        {% include 'NIMWebBundle:Vaccine:_form.html.twig' %}
    </form>
{% endblock %}
