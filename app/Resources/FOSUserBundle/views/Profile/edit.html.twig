{% extends "NIMWebBundle::layout.html.twig" %}

{% import 'NIMFormBundle:Bootstrap3:button.html.twig' as buttons %}

{% trans_default_domain 'FOSUserBundle' %}

{% block page_action %}
    {{ buttons.update('button.update', 'userCreateForm') }}
{% endblock page_action %}

{% block content %}
    <form action="{{ path('fos_user_profile_edit') }}"
          method="post"
          role="form"
          id="userCreateForm"
          class="form-horizontal"
          {{ form_enctype(form) }}
          novalidate>
        {{ form_rest(form) }}
    </form>
{% endblock content %}