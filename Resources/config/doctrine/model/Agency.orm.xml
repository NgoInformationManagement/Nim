<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>

    <mapped-superclass name="NIM\WorkerBundle\Model\Agency" table="nim_agency">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" length="255" />
        <field name="street" type="string" column="street" length="255" nullable="true" />
        <field name="postcode" type="string" column="postcode" length="255" nullable="true" />
        <field name="city" type="string" column="city" length="255" nullable="true" />
        <field name="country" type="string" column="country" length="255" nullable="true" />

        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>

        <field name="updatedAt" column="updated_at" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-many field="emails" target-entity="NIM\WorkerBundle\Model\Core\EmailInterface" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-table name="nim_agency_email">
                <join-columns>
                    <join-column name="agency_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="email_id" referenced-column-name="id" unique="true" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="phones" target-entity="NIM\WorkerBundle\Model\Core\PhoneInterface">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-table name="nim_agency_phone">
                <join-columns>
                    <join-column name="agency_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="phone_id" referenced-column-name="id" unique="true" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many field="workers" target-entity="NIM\WorkerBundle\Model\Core\WorkerInterface" mapped-by="basedAt" />
    </mapped-superclass>
</doctrine-mapping>
