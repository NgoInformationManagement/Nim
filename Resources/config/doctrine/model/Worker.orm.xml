<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>

    <entity name="NIM\WorkerBundle\Model\Worker" table="nim_worker">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="gender" type="string" column="gender" />
        <field name="firstname" type="string" column="first_name" />
        <field name="lastname" type="string" column="last_name" />
        <field name="address" type="string" column="address" nullable="true" />
        <field name="birthday" type="date" column="birthday" nullable="true" />
        <field name="diploma" type="string" column="diploma" nullable="true" />
        <field name="function" type="string" column="function" />
        <field name="arrivedAt" type="date" column="arrived_at" />
        <field name="leftAt" type="date" column="left_at" nullable="true" />
        <field name="phoneNumber" type="string" column="phone_number" nullable="true" />
        <field name="cellphoneNumber" type="string" column="cellphone_number" nullable="true" />
        <field name="email" type="string" column="email" />
        <field name="type" type="string" column="type" />
        <field name="socialSecurityNumber" type="string" column="social_security_number" nullable="true" />
        <field name="isReadyToGoOnField" type="boolean" column="is_ready_to_go_on_field" />
        <field name="isActive" type="boolean" column="is_active" />
        <field name="nationalities" column="nationalities" />
        <field name="createdBy" column="created_by" />

        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>

        <field name="updatedAt" column="updated_at" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-one field="basedAt" target-entity="Agency">
            <join-column name="based_at" referenced-column-name="id" />
        </many-to-one>

        <many-to-many field="visas" target-entity="Visa">
            <join-table name="worker_visa">
                <join-columns>
                    <join-column name="worker_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="group_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="passports" target-entity="Passport">
            <join-table name="worker_passport">
                <join-columns>
                    <join-column name="worker_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="passport_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="contacts" target-entity="Contact">
            <join-table name="worker_contact">
                <join-columns>
                    <join-column name="worker_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="contactp_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="missions" inversed-by="workers" target-entity="NIM\MissionBundle\Model\Mission">
            <join-table name="worker_mission">
                <join-columns>
                    <join-column name="worker_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="mission_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>