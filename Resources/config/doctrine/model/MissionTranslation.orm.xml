<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="NIM\MissionBundle\Model\MissionTranslation" table="nim_mission_translation">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="locale" type="string" />
        <field name="field" type="string" />
        <field name="content" type="text" nullable="true" />
        <many-to-one field="object" target-entity="NIM\MissionBundle\Model\Core\MissionInterface" inversed-by="translations" />
    </entity>
</doctrine-mapping>
