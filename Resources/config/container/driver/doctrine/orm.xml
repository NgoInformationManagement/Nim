<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="nim.repository.worker.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="nim.repository.agency.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="nim.repository.visa.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="nim.repository.passport.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="nim.repository.contact.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
    </parameters>

    <services>
        <service id="nim.manager.worker" alias="doctrine.orm.entity_manager" />
        <service id="nim.repository.worker" class="%nim.repository.worker.class%">
            <argument type="service" id="nim.manager.worker" />
            <argument type="service">
                <service
                        factory-service="nim.manager.worker"
                        factory-method="getClassMetadata"
                        class="Doctrine\ORM\Mapping\ClassMetadata"
                        >
                    <argument>%nim.model.worker.class%</argument>
                </service>
            </argument>
        </service>

        <service id="nim.manager.agency" alias="doctrine.orm.entity_manager" />
        <service id="nim.repository.agency" class="%nim.repository.agency.class%">
            <argument type="service" id="nim.manager.agency" />
            <argument type="service">
                <service
                        factory-service="nim.manager.agency"
                        factory-method="getClassMetadata"
                        class="Doctrine\ORM\Mapping\ClassMetadata"
                        >
                    <argument>%nim.model.agency.class%</argument>
                </service>
            </argument>
        </service>

        <service id="nim.manager.contact" alias="doctrine.orm.entity_manager" />
        <service id="nim.repository.contact" class="%nim.repository.contact.class%">
            <argument type="service" id="nim.manager.contact" />
            <argument type="service">
                <service
                        factory-service="nim.manager.contact"
                        factory-method="getClassMetadata"
                        class="Doctrine\ORM\Mapping\ClassMetadata"
                        >
                    <argument>%nim.model.contact.class%</argument>
                </service>
            </argument>
        </service>

        <service id="nim.manager.visa" alias="doctrine.orm.entity_manager" />
        <service id="nim.repository.visa" class="%nim.repository.visa.class%">
            <argument type="service" id="nim.manager.visa" />
            <argument type="service">
                <service
                        factory-service="nim.manager.visa"
                        factory-method="getClassMetadata"
                        class="Doctrine\ORM\Mapping\ClassMetadata"
                        >
                    <argument>%nim.model.visa.class%</argument>
                </service>
            </argument>
        </service>

        <service id="nim.manager.passport" alias="doctrine.orm.entity_manager" />
        <service id="nim.repository.passport" class="%nim.repository.passport.class%">
            <argument type="service" id="nim.manager.passport" />
            <argument type="service">
                <service
                        factory-service="nim.manager.passport"
                        factory-method="getClassMetadata"
                        class="Doctrine\ORM\Mapping\ClassMetadata"
                        >
                    <argument>%nim.model.passport.class%</argument>
                </service>
            </argument>
        </service>
    </services>
</container>
