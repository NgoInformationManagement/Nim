<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
http://symfony.com/schema/dic/services/services-1.0.xsd">



    <services>
        <!-- Mission ressource -->
        <service id="nim.controller.worker" class="%nim.controller.worker.class%">
            <argument>nim</argument>
            <argument>worker</argument>
            <argument>NIMMissionBundle:Mission</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!-- Mission Form -->
        <service id="nim.form.type.worker" class="%nim.form.type.worker.class%">
            <argument>%nim.model.worker.class%</argument>
            <argument>%nim.validation_group.worker%</argument>
            <tag name="form.type" alias="nim_worker" />
        </service>
    </services>
</container>