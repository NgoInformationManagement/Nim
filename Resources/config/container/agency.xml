<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
http://symfony.com/schema/dic/services/services-1.0.xsd">



    <services>
        <!-- Agency ressource -->
        <service id="nim.controller.agency" class="%nim.controller.agency.class%">
            <argument>nim</argument>
            <argument>agency</argument>
            <argument>NIMWorkerBundle:Agency</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!-- Agency Form -->
        <service id="nim.form.type.agency" class="%nim.form.type.agency.class%">
            <argument>%nim.model.agency.class%</argument>
            <argument>%nim.validation_group.agency%</argument>
            <tag name="form.type" alias="nim_agency" />
        </service>
    </services>
</container>