{% macro emailList(emails) %}
    {% from 'NIMFormBundle:bootstrap3:show.html.twig' import displayedField %}
    {% from 'NIMFormBundle:bootstrap3:alert.html.twig' import info %}

    {% if emails|length > 0 %}
        {% for email in emails %}
            <div class="col-lg-6">
                {{ displayedField('label', email.label, 'email', 3) }}
                {{ displayedField('address', email.address, 'email', 3) }}
            </div>
        {% endfor %}
    {% else %}
        {{ info('email.message.empty'|trans) }}
    {% endif %}
{% endmacro %}

