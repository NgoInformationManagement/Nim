<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <title>
            {% block title %}
                {{ 'layout.page.title'|trans }}
            {% endblock %}
        </title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {# stylesheets #}
        {% block stylesheets %}
            {% stylesheets output='assets/compiled/nim.css' filter='cssrewrite'
                'bundles/nimweb/css/bootstrap.css'
                'bundles/nimweb/css/font-awesome.css'
                'bundles/nimweb/css/theme.css'
                'bundles/nimweb/css/nim.css'
            %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body class="wide mini-sidebar">
        {% block body %}
        <div id="wrap">

            <div id="top" class="navbar-fixed-top">
                <!-- .navbar -->
                <nav class="navbar navbar-inverse navbar-static-top">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    {% block top_menu %}
                    <header class="navbar-header">
                        <a class="navbar-brand" href="{# TODO #}">
                            <img alt="" src="{# TODO #}">
                            {{ 'layout.header.title'|trans }}
                        </a>
                    </header>
                    {% endblock top_menu %}

                    <div class="topnav">
                        <div class="btn-toolbar">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-default"
                                   href="{{ path('fos_user_profile_show') }}">
                                    <i class="icon-wrench"></i>
                                </a>
                                <a class="btn btn-metis-1 btn-sm"
                                   href="{{ path('fos_user_security_logout') }}">
                                    <i class="icon-off"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </nav>
                <!-- /.navbar -->


                <!-- header.head -->
                <header class="head">
                    <!-- ."main-bar -->
                    <div class="main-bar">
                        <h3>
                            <span class="actionTitle">
                            {% block page_name %}
                                <i class="icon-dashboard"></i>
                                {{ 'layout.page.name'|trans }}
                            {% endblock page_name %}
                            </span>
                            <span class="pull-right text-right actionButton">
                                {% block page_action %}

                                {% endblock page_action %}
                            </span>
                        </h3>
                    </div>
                    <!-- /.main-bar -->
                </header>
                <!-- end header.head -->
            </div>


            <div id="left" class="navbar-fixed-top navbar-fixed-left">
                <!-- #menu -->
                <ul class="accordion collapse" id="menu">
                    {% block left_menu %}
                    {#<li class="nav-header">Menu</li>#}
                    {#<li class="nav-divider"></li>#}
                    <li>
                        <a href="">
                            <i class="icon-dashboard"></i>
                            {{ 'menu.dashbord' | trans }}
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="icon-rocket"></i>
                            {{ 'menu.agency' | trans }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('nim_mission_index') }}">
                            <i class="icon-rocket"></i>
                            {{ 'menu.mission' | trans }}
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="icon-male"></i>
                            {{ 'menu.worker' | trans }}
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="icon-beaker"></i>
                            {{ 'menu.vaccine' | trans }}
                        </a>
                    </li>
                    {% endblock left_menu %}
                </ul>

                <!-- /#menu -->
            </div>
            <!-- /#left -->

            <div id="content">
                <div class="outer">
                    <div class="inner">
                    {% block content %}
                    {% endblock content %}
                    </div>
                </div>
                <!-- end .outer -->
            </div>
            <!-- end #content -->
        </div>
        <!-- /#wrap -->


        <div id="footer">
            <p>2013 &copy; {{ 'layout.footer'|trans }}</p>
        </div>

        {# javascripts... #}
        {% block javascripts %}
            {% javascripts output='assets/compiled/nim.js'
                'bundles/nimweb/js/jquery.min.js'
                'bundles/nimweb/js/bootstrap.min.js'
                'bundles/nimweb/js/knockout.min.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}

        {% endblock body %}
    </body>
</html>