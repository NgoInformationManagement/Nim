{% macro list(agencies) %}

    {% from 'NIMFormBundle:Bootstrap3:button.html.twig' import listActionButton %}
    {% from 'NIMFormBundle:Bootstrap3:notification.html.twig' import info %}

    {% if agencies|length > 0 %}
        <div class="table-responsive row">
            <table class="table table-bordered table-hover">
                <colgroup>
                    <col width="25%">
                    <col>
                    <col width="20%">
                    <col>
                </colgroup>
                <thead>
                <tr>
                    <th>{{ sylius_resource_sort('name', 'agency.field.name.label'|trans) }}</th>
                    <th>{{ 'addressing.address'|trans }}</th>
                    <th>{{ sylius_resource_sort('country', 'agency.field.country.label'|trans) }}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for agency in agencies %}
                    <tr>
                        <td >{{ agency.name }}</td>
                        <td>{{ agency.street }} {{ agency.postcode }} {{ agency.city }}</td>
                        <td>{{ agency.country|country }}</td>
                        <td>
                            {{ listActionButton('nim_agency', agency.id)  }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        {{ info('agency.message.empty') }}
    {% endif %}
{% endmacro %}
