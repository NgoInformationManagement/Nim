<form action="{{ path(path) }}"
      method="GET"
      role="form"
      id="workerCreateForm"
      class="form-horizontal panel panel-default"
      novalidate>
    <div class="panel-heading">
        {{ 'general.filter'|trans }}
    </div>
    <div class="panel-body">
        <div class="row">
            {% for child in form %}
                <div class="col-lg-3">
                    {{ form_row(child) }}
                </div>
            {% endfor %}
        </div>
        <div class=" text-right">
            <button class="btn btn-primary">
                <i class="icon-filter"></i>
                {{ 'button.filter'|trans }}
            </button>
        </div>
    </div>
</form>